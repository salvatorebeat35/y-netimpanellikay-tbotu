<%- include('blocks/header', {bot, user, path}) %>
  <h5>Safe Code Admin Paneli</h5>
  <ul class="list-unstyled">
    <% bot.guilds.forEach(guild => { %>
      <li class="media" style="padding: 10px;">
        <% if (guild.icon) { %>
          <img class="d-flex mr-3 rounded-circle" src="<%= `https://cdn.discordapp.com/icons/${guild.id}/${guild.icon}.png?size=128` %>" style="width: 80px;" alt="">
          <% } else { %>
            <canvas style="background-color: #7289da" class="d-flex mr-3 rounded-circle" id="<%= guild.name.split(' ').join('').replace(`'`, ``) %>" width="80px" height="80px"></canvas>
            <script>
              function draw() {
                const ctx = document.getElementById("<%= guild.name.split(' ').join('').replace(`'`, ``) %>").getContext('2d');
                ctx.font = '30px Arial';
                ctx.textAlign = "center";
                ctx.fillStyle = "white";
                ctx.fillText("<%= guild.name.split(' ').map(v => v[0]).join('') %>", 40, 50);
              };
              draw();
            </script>
            <% } %>
              <div class="media-body">
                <h5 class="mt-0 mb-1">
                  <%= guild.name %>
                </h5>
                <% 
                  let href, text;
                  if(bot.guilds.get(guild.id)) {
                    href = `/dashboard/${guild.id}/manage`;
                    text = "DÃ¼zenle";
                  } else {
                    href = `https://discordapp.com/oauth2/authorize?client_id=${bot.config.dashboard.clientID}&scope=bot&guild_id=${guild.id}&response_type=code&redirect_uri=${encodeURIComponent(client.config.dashboard.callbackURL)}`;
                    text = "Botu Ekle";
                  }
                  %>
                  <a style="border-color: #313131; background-color: #333;-webkit-box-shadow: 0px 10px 13px -7px #000000, 9px 5px 15px 4px rgba(0,0,0,0.5); box-shadow: 0px 10px 13px -7px #000000, 9px 5px 15px 4px rgba(0,0,0,0.5);" class="btn btn-primary btn-lg" role="button" href="<%= href %>"> <%= text %> <i class="fa fa-fw fa-chevron-circle-right" aria-hidden="true"></i></a>
              </div>
      </li>
      <% }); %>
  </ul>

  <% include blocks/footer %>