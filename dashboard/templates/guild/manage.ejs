<%- include('../blocks/header', {bot, user, path}) %>
<h5>Safe Code Gelişmiş Kayıt Botu</h5>  
<div class="row">
  <div class="col col-4">
    <%- include('../blocks/guild-card', {guild}) %>
  </div>
  <div class="col">
    <form method="post">
      
          <div class="input-group mb-2 mr-sm-2 mb-sm-0" style="width: 75%; margin: 0 !important;">
            <div class="input-group-addon" style="width: 150px; text-align: left; margin: 0;">Prefix</div>
            <input type="text" class="form-control" style="border-color: #313131;background-color: #333; text-align: center; border-radius: 20px 20px 20px 20px; -moz-border-radius: 20px 20px 20px 20px; -webkit-border-radius: 20px 20px 20px 20px; border: 4px inherit #808080; text-align: center;" name="prefix" id="prefix" placeholder="Örnek : s!">
        </div>
      <br>
      <div class="input-group mb-2 mr-sm-2 mb-sm-0" style="width: 75%; margin: 0 !important;">
            <div class="input-group-addon" style="width: 150px; text-align: left; margin: 0;">Sayaç</div>
            <input type="text" class="form-control" style="border-color: #313131;background-color: #333; text-align: center; border-radius: 20px 20px 20px 20px; -moz-border-radius: 20px 20px 20px 20px; -webkit-border-radius: 20px 20px 20px 20px; border: 4px inherit #808080; text-align: center;" name="sayac" id="sayac" placeholder="Örnek : 50">
        </div>
      <br>
                <div class="input-group mb-2 mr-sm-2 mb-sm-0" style="width: 75%; margin: 0 !important;">
            <div class="input-group-addon" style="width: 150px; text-align: left; margin: 0;">Giriş Mesaj</div>
            <input type="text" class="form-control" style="border-color: #313131;background-color: #333; text-align: center; border-radius: 20px 20px 20px 20px; -moz-border-radius: 20px 20px 20px 20px; -webkit-border-radius: 20px 20px 20px 20px; border: 4px inherit #808080; text-align: center;" name="gmesaj" id="gmesaj" placeholder="Örnek : {kullanıcı} Hey {sunucu} Adlı Sunucumuza Hoşgeldin!">
        </div>
      <br>
      <div class="input-group mb-2 mr-sm-2 mb-sm-0" style="width: 75%; margin: 0 !important;">
            <div class="input-group-addon" style="width: 150px; text-align: left; margin: 0;">Çıkış Mesaj</div>
            <input type="text" class="form-control" style="text-color: #fff; border-color: #313131;background-color: #333; text-align: center; border-radius: 20px 20px 20px 20px; -moz-border-radius: 20px 20px 20px 20px; -webkit-border-radius: 20px 20px 20px 20px; border: 4px inherit #808080; text-align: center;" name="cmesaj" id="cmesaj" placeholder="Örnek : {kullanıcı} Aaa {sunucu} Adlı Sunucumuzdan Ayrıldı!">
        </div>
       <br>
           <br>
      <div class="input-group mb-2 mr-sm-2 mb-sm-0" style="margin: 0 !important;">
            <div class="input-group-addon" style="width: 151px; text-align: left; margin: 0; color:white">Giriş-Çıkış Kanal</div>
         <div class="select">      
        <select id="girisk" name="girisk">
              <option disabled selected> Bir kanal seçmelisin. </option><br>
              <% const kanallar = guild.channels %>
              <% kanallar.map(item=> { %>
              <% if (item.type == 'voice' || item.type == 'category') return;%>
              <option value="<%=item.id%>" id="<%= item.id%>"> <%= item.name %> </option>
              <% }) %>
            </select>
               <div class="select_arrow">
        </div>
        <br>
           <br>
      <div class="input-group mb-2 mr-sm-2 mb-sm-0" style="margin: 0 !important;">
            <div class="input-group-addon" style="width: 151px; text-align: left; margin: 0; color:white">Otorol</div>
                 <div class="select">      
            <select id="otorol" name="otorol">
              <option disabled selected> Bir rol seçmelisin. </option>
              <% const roller = guild.roles %>
              <% roller.map(item=> { %>
              <% if (item.name == '@everyone') return;%>
              <option value="<%=item.id%>" id="<%= item.id%>"> <%= item.name %></option>
              <% }) %>
            </select>
                       <div class="select_arrow">

        </div>
      
      
      </ul>
      <div style="width: 100%; text-align: right; margin-top: 20px;">
        <a style="border-color: #313131; background-color: #333;-webkit-box-shadow: 0px 10px 13px -7px #000000, 9px 5px 15px 4px rgba(0,0,0,0.5); box-shadow: 0px 10px 13px -7px #000000, 9px 5px 15px 4px rgba(0,0,0,0.5);" class="btn btn-danger" data-toggle="modal" data-target="#settingsResetModal" role="button">Ayarları Sıfırla <i class="fa fa-fw fa-cogs" aria-hidden="true"></i></a>
					<button style="border-color: #313131; background-color: #333;-webkit-box-shadow: 0px 10px 13px -7px #000000, 9px 5px 15px 4px rgba(0,0,0,0.5); box-shadow: 0px 10px 13px -7px #000000, 9px 5px 15px 4px rgba(0,0,0,0.5);" type="submit" class="btn btn-primary"><i class="fa fa-save fa-save"></i> Ayarları Kaydet<i aria-hidden='true'></i></button>
      </div>
    </form>
  </div>
</div>
<% include ../blocks/guild-modals %>
<% include ../blocks/footer %>